        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>

        <StackPanel>

            <TextBlock Margin="0 20 0 0">File path:</TextBlock>
            <TextBox x:Name="File_path">"C:\Users\andersv\Google Drive\Coding\R\Ekonomi\index_GUI.R"</TextBox>
